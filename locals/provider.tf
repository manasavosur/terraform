terraform {
  required_providers {
    aws = {
      source = "hashicorp/aws"
      version = "6.33.0" # Terraform AWS provider version
    }
  }

  backend "s3" {
    bucket  = "daws-88s-s3" # Replace with your unique bucket name
    key     = "locals.tfstate"
    region  = "us-east-1"
    encrypt = true
    use_lockfile   = true #used to lock the remote state 
  }
}

provider "aws" {
  region = "us-east-1"
}